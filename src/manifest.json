{
  "manifest_version": 3,
  "name": "BB Todo List",
  "description": "Local-first todo list extension",
  "version": "1.3.0",
  "permissions": ["storage", "sidePanel"],
  "action": {
    "default_title": "Open BB Panel"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
