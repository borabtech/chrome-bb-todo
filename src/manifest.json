{
  "manifest_version": 3,
  "name": "Extendo",
  "description": "Local todo list extension",
  "version": "1.0.0",
  "permissions": ["storage", "sidePanel"],
  "action": {
    "default_title": "Open Extendo Panel",
    "default_icon": {
      "16": "assets/ico/favicon-16x16.png",
      "32": "assets/ico/favicon-32x32.png",
      "48": "assets/ico/favicon-48x48.png",
      "128": "assets/ico/favicon-128x128.png"
    }
  },
    "icons": {
      "16": "assets/ico/favicon-16x16.png",
      "32": "assets/ico/favicon-32x32.png",
      "48": "assets/ico/favicon-48x48.png",
      "128": "assets/ico/favicon-128x128.png"
    },
  "side_panel": {
    "default_path": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}